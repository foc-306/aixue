
body{
	background: #f5f6f7;
}
a:hover{
	text-decoration: none;
}
a:link{
text-decoration:none;
}
a:visited{
text-decoration:none;
}
a{
	text-decoration: none;
	color: black;
}

.menu li a:hover, .menu li.active a {
	color: #065e86;
	background-color: rgba(0,0,0,0);
}

.plate{
	margin-bottom: 20px;
}
.plate>div>span{
	background: #0facf3b3;
	padding: 10px;
	padding-right: 5px;
	<!-- border: 3px solid #f5f6f7; -->
}
.plate>div>span>a{
	color:#fff;
}
.plate>div>span:hover{
	box-shadow:0 0 3px #0facf3;
}
.plate>div>span.active{
	background: #0facf3;
}

.media{
	text-align: left;
	background: #b4d2f0;
    padding: 10px;
}
.media:hover{
	box-shadow: 0px 5px 10px #33333380;
	/* background: #d3dbe4; */
}

.media-body{
	word-wrap: break-word;
    word-break: break-all;
}
.media-body>.media-heading{
	overflow:hidden;
	white-space:nowrap;
	text-overflow:ellipsis; 
}
.media-body>p{
	overflow:hidden; 
	text-overflow:ellipsis;
	display:-webkit-box; 
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2; 
	font-size: 13px;
}

.list-group-item{
	text-align: left;
}