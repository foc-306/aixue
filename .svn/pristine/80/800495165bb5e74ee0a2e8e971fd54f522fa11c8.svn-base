.media{
	text-align: left;
	background: #b4d2f0;
    padding: 10px;
}
.media:hover{
	background: #d3dbe4;
}


.media-body>.media-heading{
	overflow:hidden;
	white-space:nowrap;
	text-overflow:ellipsis; 
}
.media-body>p{
	overflow:hidden; 
	text-overflow:ellipsis;
	display:-webkit-box; 
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2; 
	font-size: 13px;
}

.list-group-item{
	text-align: left;
}