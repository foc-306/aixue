        }
        .h13{color:#1793d1;
            font-size:2.5em;
            text-align:center;
            margin:40px auto 30px auto;
        }

        #filters{text-align:center;
            margin:2em 0 3em 0;
            list-style:none;
        }
        #filters li{display:inline-block;

            margin:0 10px;

            border:3px solid #333;
            padding:5px 20px;
            align:center;
            cursor:pointer; /*鼠标停留时显示效果：手*/
        }
        .toggleMenu{display:none;}

        .col-xs-6{

            color:#FDFDFD;
            text-align:center;
            font-size:20px;
        }

    </style>

    <style>
        @media screen and (max-width:992px) {
            .nav li{display:none;}
            .toggleMenu{display:inline-block;}
            .toggleMenu img{width:95%;}
        }
        @media screen and (max-width:768px){
            #filters li{
                padding:2px 10px;
                margin:0 6px;
            }
        }
        @media screen and (max-width: 640px){
            #filters{
                margin:2em 0 8px 0;
            }
            #filters li{
                border:2px solid #333;
            }

        }
        @media screen and (max-width: 476px){

            #filters li{
                padding:0 5px;
                margin:0 5px;
            }
        }
        @media screen and (max-width: 376px){
            #filters{
                margin:15px 0 8px 0;
            }
            #filters li{

                padding:0 0;
                margin:0 0;
            }
        }
    </style>
    <script>
        $(function(){
            $("#nav li").click(function() {

                $(this).siblings('li').removeAttr('color','#065e86');  // 删除其他兄弟元素的样式
               // $(this).siblings('li').css("background","#E8E8E8");
                //$(this).addClass('zuo');                            // 添加当前元素的样式
                $(this).attr("color","#065e86");
            });
        });
    </script>
